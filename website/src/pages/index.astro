---
import Layout from '../layouts/Layout.astro';
import Footer from '../components/Footer.astro';

const baseUrl = '/ckan-mcp-server';
---

<Layout title="CKAN MCP Server - AI-Powered Open Data Exploration">
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Fraunces:opsz,wght@9..144,400;9..144,600;9..144,700&family=IBM+Plex+Mono:wght@400;500&family=IBM+Plex+Sans:wght@400;500;600&display=swap');

    :root {
      --navy: #0A1628;
      --data-blue: #0066CC;
      --teal: #0D9488;
      --coral: #F97316;
      --amber: #F59E0B;
      --cream: #FFFEF9;
      --gray-50: #F8FAFC;
      --gray-100: #F1F5F9;
      --gray-200: #E2E8F0;
      --gray-600: #475569;
      --gray-700: #334155;
      --gray-900: #0F172A;
    }

    body {
      font-family: 'IBM Plex Sans', -apple-system, sans-serif;
      color: var(--gray-900);
      background: var(--cream);
    }

    .display-font {
      font-family: 'Fraunces', Georgia, serif;
      font-optical-sizing: auto;
    }

    .mono {
      font-family: 'IBM Plex Mono', 'Courier New', monospace;
    }

    /* Animated grid background */
    .data-grid {
      background-image:
        linear-gradient(to right, rgba(10, 22, 40, 0.03) 1px, transparent 1px),
        linear-gradient(to bottom, rgba(10, 22, 40, 0.03) 1px, transparent 1px);
      background-size: 48px 48px;
      animation: gridShift 20s linear infinite;
    }

    @keyframes gridShift {
      0% { background-position: 0 0; }
      100% { background-position: 48px 48px; }
    }

    /* Hero number animation */
    .stat-number {
      display: inline-block;
      font-variant-numeric: tabular-nums;
    }

    @keyframes fadeInUp {
      from {
        opacity: 0;
        transform: translateY(20px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .fade-in-up {
      animation: fadeInUp 0.8s ease-out forwards;
    }

    /* Feature card hover effect */
    .feature-card {
      position: relative;
      overflow: hidden;
    }

    .feature-card::before {
      content: '';
      position: absolute;
      top: 0;
      left: -100%;
      width: 100%;
      height: 100%;
      background: linear-gradient(90deg, transparent, rgba(0, 102, 204, 0.05), transparent);
      transition: left 0.5s;
    }

    .feature-card:hover::before {
      left: 100%;
    }

    /* Code block styling */
    .code-block {
      background: var(--navy);
      border-left: 3px solid var(--data-blue);
      position: relative;
    }

    .code-block::after {
      content: 'JSON';
      position: absolute;
      top: 8px;
      right: 12px;
      font-size: 10px;
      font-weight: 600;
      letter-spacing: 0.05em;
      color: rgba(255, 255, 255, 0.3);
      font-family: 'IBM Plex Mono', monospace;
    }

    /* Portal card 3D effect */
    .portal-card {
      transform: translateZ(0);
      transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .portal-card:hover {
      transform: translateY(-4px) translateZ(0);
      box-shadow:
        0 10px 25px -5px rgba(0, 0, 0, 0.1),
        0 10px 10px -5px rgba(0, 0, 0, 0.04),
        0 0 0 1px rgba(0, 102, 204, 0.1);
    }

    /* Connecting lines decoration */
    .connection-line {
      position: relative;
    }

    .connection-line::before {
      content: '';
      position: absolute;
      left: 50%;
      top: -40px;
      width: 1px;
      height: 40px;
      background: linear-gradient(to bottom, transparent, var(--gray-200), transparent);
    }
  </style>

  <main class="bg-cream">
    <!-- Hero Section -->
    <section class="relative py-24 px-4 sm:px-6 lg:px-8 overflow-hidden data-grid">
      <div class="max-w-5xl mx-auto">
        <!-- Decorative elements -->
        <div class="absolute top-20 right-10 w-32 h-32 rounded-full bg-teal opacity-5 blur-3xl"></div>
        <div class="absolute bottom-20 left-10 w-40 h-40 rounded-full bg-data-blue opacity-5 blur-3xl"></div>

        <div class="relative z-10">
          <!-- Eyebrow -->
          <div class="flex items-center justify-center gap-3 mb-8 fade-in-up">
            <span class="mono text-xs font-medium tracking-widest uppercase text-gray-600 bg-white px-4 py-2 rounded-full border border-gray-200">
              MCP Protocol
            </span>
            <span class="mono text-xs font-medium tracking-widest uppercase text-gray-600 bg-white px-4 py-2 rounded-full border border-gray-200">
              Open Source
            </span>
          </div>

          <h1 class="display-font text-6xl sm:text-7xl lg:text-8xl font-bold text-center text-navy mb-8 leading-tight fade-in-up" style="animation-delay: 0.1s">
            Explore Open Data<br/><span class="text-data-blue">with AI</span>
          </h1>

          <p class="text-xl sm:text-2xl text-center text-gray-700 mb-6 max-w-3xl mx-auto fade-in-up" style="animation-delay: 0.2s">
            MCP server for AI-powered interaction with CKAN open data portals
          </p>

          <p class="text-lg text-center text-gray-600 mb-12 max-w-2xl mx-auto fade-in-up" style="animation-delay: 0.3s">
            Search datasets, query tabular data, and analyze metadata across 500+ portals worldwide using natural language with Claude, ChatGPT, and other MCP-compatible AI tools.
          </p>

          <!-- CTA -->
          <div class="flex flex-col sm:flex-row gap-4 justify-center items-center mb-16 fade-in-up" style="animation-delay: 0.4s">
            <a
              href="#install"
              class="inline-block bg-data-blue text-white px-10 py-4 rounded-none font-semibold hover:bg-navy transition-all duration-300 hover:scale-105 shadow-lg hover:shadow-xl"
            >
              Get Started â†’
            </a>
            <a
              href="https://github.com/ondata/ckan-mcp-server"
              target="_blank"
              rel="noopener noreferrer"
              class="inline-block bg-transparent text-navy px-10 py-4 rounded-none font-semibold border-2 border-navy hover:bg-navy hover:text-white transition-all duration-300"
            >
              View on GitHub
            </a>
          </div>

        </div>
      </div>
    </section>

    <!-- Features Section -->
    <section class="py-24 px-4 sm:px-6 lg:px-8 bg-white">
      <div class="max-w-6xl mx-auto">
        <div class="text-center mb-20">
          <h2 class="display-font text-5xl font-bold text-navy mb-6">
            Why CKAN MCP Server?
          </h2>
          <p class="text-lg text-gray-600 max-w-2xl mx-auto">
            Purpose-built for researchers, data scientists, and journalists working with open data
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          <div class="feature-card p-8 bg-gray-50 border-l-4 border-data-blue">
            <div class="mono text-sm font-medium text-data-blue mb-4 tracking-wider">01</div>
            <h3 class="display-font text-2xl font-semibold text-navy mb-3">Advanced Search</h3>
            <p class="text-gray-600 leading-relaxed">
              Use Solr syntax for powerful queries: fuzzy matching, proximity search, date ranges, boosting, and complex boolean logic.
            </p>
          </div>

          <div class="feature-card p-8 bg-gray-50 border-l-4 border-teal">
            <div class="mono text-sm font-medium text-teal mb-4 tracking-wider">02</div>
            <h3 class="display-font text-2xl font-semibold text-navy mb-3">DataStore Queries</h3>
            <p class="text-gray-600 leading-relaxed">
              Query tabular data directly with filters, sorting, and SQL support. Analyze datasets without downloading files.
            </p>
          </div>

          <div class="feature-card p-8 bg-gray-50 border-l-4 border-coral">
            <div class="mono text-sm font-medium text-coral mb-4 tracking-wider">03</div>
            <h3 class="display-font text-2xl font-semibold text-navy mb-3">500+ Portals</h3>
            <p class="text-gray-600 leading-relaxed">
              Connect to any CKAN portal worldwide: dati.gov.it, data.gov, data.europa.eu, and hundreds more.
            </p>
          </div>

          <div class="feature-card p-8 bg-gray-50 border-l-4 border-amber">
            <div class="mono text-sm font-medium text-amber mb-4 tracking-wider">04</div>
            <h3 class="display-font text-2xl font-semibold text-navy mb-3">Natural Language</h3>
            <p class="text-gray-600 leading-relaxed">
              Ask questions in plain language. AI converts your intent into precise CKAN API queries automatically.
            </p>
          </div>

          <div class="feature-card p-8 bg-gray-50 border-l-4 border-data-blue">
            <div class="mono text-sm font-medium text-data-blue mb-4 tracking-wider">05</div>
            <h3 class="display-font text-2xl font-semibold text-navy mb-3">Rich Metadata</h3>
            <p class="text-gray-600 leading-relaxed">
              Access complete dataset metadata, organization details, tags, groups, and quality metrics (MQA).
            </p>
          </div>

          <div class="feature-card p-8 bg-gray-50 border-l-4 border-teal">
            <div class="mono text-sm font-medium text-teal mb-4 tracking-wider">06</div>
            <h3 class="display-font text-2xl font-semibold text-navy mb-3">Developer Friendly</h3>
            <p class="text-gray-600 leading-relaxed">
              TypeScript, 200+ automated tests, comprehensive docs. Install via npm or deploy to Cloudflare Workers.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Installation Section -->
    <section id="install" class="py-24 px-4 sm:px-6 lg:px-8 bg-cream">
